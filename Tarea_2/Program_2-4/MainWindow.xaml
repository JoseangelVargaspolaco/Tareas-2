<Window x:Class="Program_2_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program_2_4"
        mc:Ignorable="d"
        Title="Calcular de portencias" Height="350" Width="500">
    <Grid Background="#FFAF6363">

        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2"/>

        <TextBlock HorizontalAlignment="Left" Margin="20,53,10,0" Text="Ingrese el numerador" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,78,0,0" Text="Ingrese el exponente" VerticalAlignment="Top" FontSize="16"/>
        
        <TextBox x:Name="Elevado" HorizontalAlignment="Left" Margin="180,55,0,0" Text="" VerticalAlignment="Top" Width="266" Height="20"/>
        <TextBox x:Name="Elevado_2" HorizontalAlignment="Left" Margin="180,80,0,0" Text="" VerticalAlignment="Top" Width="266" Height="20"/>
        
        <Button Content="Resultado" Width="193" Height="70" Click="ElevadoButton"/>
        
    </Grid>

</Window>
